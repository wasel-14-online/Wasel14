# Wassel Environment Variables - PRODUCTION
# IMPORTANT: This file should NEVER be committed to git
# After setup, run: git rm --cached .env

# Application Configuration
VITE_APP_NAME=Wassel
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production
VITE_DEMO_MODE=false

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true

# Supabase Configuration - ROTATE THESE IMMEDIATELY
# Go to: https://supabase.com/dashboard/project/djcmatubybyudeosrngt/settings/api
# Generate NEW keys and replace these
VITE_SUPABASE_URL=https://djcmatubybyudeosrngt.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_NEW_ANON_KEY_HERE

# JWT Keys - GENERATE NEW KEYS
# Use: node -e "console.log(require('crypto').randomUUID())"
VITE_JWT_STANDBY_KEY=YOUR_NEW_JWT_KEY_HERE

# Google Maps API
# Get from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Stripe Payment Keys (Test Mode)
# Get from: https://dashboard.stripe.com/test/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_KEY
VITE_STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY

# Firebase Configuration (Optional - for push notifications)
# Get from: https://console.firebase.google.com
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=YOUR_PROJECT.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=YOUR_PROJECT.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_APP_ID
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Twilio Configuration (Optional - for SMS)
# Get from: https://console.twilio.com
VITE_TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID
VITE_TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN
VITE_TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Server-side only)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=YOUR_SENDGRID_KEY
SENDGRID_FROM_EMAIL=noreply@wassel.app

# App URLs
VITE_APP_URL=http://localhost:3000
VITE_API_URL=https://djcmatubybyudeosrngt.supabase.co

# Security Settings
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=3600
VITE_MAX_LOGIN_ATTEMPTS=5

# Business Settings
VITE_PLATFORM_FEE_PERCENTAGE=20
VITE_DRIVER_COMMISSION_PERCENTAGE=80
VITE_CANCELLATION_WINDOW_MINUTES=5
VITE_SEARCH_RADIUS_KM=50

# Currency Settings
VITE_DEFAULT_CURRENCY=USD
VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP,AED,SAR

# Map Settings
VITE_DEFAULT_MAP_CENTER_LAT=25.2048
VITE_DEFAULT_MAP_CENTER_LNG=55.2708
VITE_DEFAULT_MAP_ZOOM=12

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Error Tracking (Optional)
VITE_SENTRY_DSN=YOUR_SENTRY_DSN
