{
  // TypeScript Compiler Options for the main application
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022", // Updated for modern JavaScript features
    "lib": [ "ES2022", "DOM", "DOM.Iterable" ], // Updated to match target
    "module": "ESNext",
    "moduleResolution": "bundler",

    // JSX
    "jsx": "react-jsx",

    // Strict Type Checking
    "strict": true,
    "noImplicitOverride": true, // Prevent accidental overrides
    "noImplicitReturns": true, // Ensure all code paths return
    "exactOptionalPropertyTypes": true, // Stricter optional properties
    "noUncheckedIndexedAccess": true, // Safer array/object access
    "noFallthroughCasesInSwitch": true,

    // Code Quality
    "noUnusedLocals": true, // Enabled for cleaner code
    "noUnusedParameters": true, // Enabled for cleaner code

    // Module and Import
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Performance
    "skipLibCheck": true,
    "incremental": true, // Enable incremental compilation
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo", // Cache location

    // Output
    "noEmit": true,

    // Class Fields
    "useDefineForClassFields": true,

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },
  "include": [ "src" ],
  "exclude": [
    "src/supabase/functions/**",
    "node_modules"
  ],
  "references": [ { "path": "./tsconfig.node.json" } ]
}
